<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="head_edittext">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textColorHint">#FFCCBC</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="OrangeEditTheme">
        <item name="colorControlNormal">#FF6E40</item>
        <item name="colorControlActivated">#FF9E80</item>
        <item name="colorControlHighlight">#FF9E80</item>
    </style>

</resources>
